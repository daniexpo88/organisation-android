<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_50"
    tools:context=".activities.ModificarTareaActivity"
    android:theme="@style/Theme.OrganisationBlue">

    <EditText
        android:id="@+id/tituloTareaModificar"
        android:layout_width="372dp"
        android:layout_height="44dp"
        android:fontFamily="@font/ocra"
        android:hint="Titulo"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@color/blue_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />


    <EditText
        android:id="@+id/fechaLimiteModificar"
        android:layout_width="143dp"
        android:layout_height="47dp"
        android:background="@color/blue_200"
        android:clickable="true"
        android:focusable="false"
        android:fontFamily="@font/ocra"
        android:hint="Fecha limite"
        android:inputType="date"
        android:maxLines="1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tituloTareaModificar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103" />

    <EditText
        android:id="@+id/contenidoTareaModificar"
        android:layout_width="372dp"
        android:layout_height="481dp"
        android:layout_marginTop="8dp"
        android:background="@color/blue_200"
        android:fontFamily="@font/ocra"
        android:gravity="top"
        android:hint="Contenido"
        android:inputType="text|textMultiLine"
        android:singleLine="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloTareaModificar"
        app:layout_constraintVertical_bias="0.313" />

    <Button
        android:id="@+id/botonGuardarTareaModificar"
        android:layout_width="170dp"
        android:layout_height="42dp"
        android:background="@color/blue_700"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/botonEliminarTareaModificar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/contenidoTareaModificar"
        app:layout_constraintTop_toBottomOf="@+id/contenidoTareaModificar"
        app:layout_constraintVertical_bias="0.506" />

    <Button
        android:id="@+id/botonEliminarTareaModificar"
        android:layout_width="170dp"
        android:layout_height="42dp"
        android:background="@color/blue_700"
        android:text="Eliminar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/contenidoTareaModificar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contenidoTareaModificar"
        app:layout_constraintVertical_bias="0.506" />
</androidx.constraintlayout.widget.ConstraintLayout>